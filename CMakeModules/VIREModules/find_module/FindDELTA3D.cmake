SET(DELTA3D_NAME delta3d)

MACRO( FIND_DELTA3D_INCLUDE THIS_DELTA3D_INCLUDE_DIR THIS_DELTA3D_INCLUDE_FILE )

    FIND_PATH( ${THIS_DELTA3D_INCLUDE_DIR} ${THIS_DELTA3D_INCLUDE_FILE}
        PATHS
            ${DELTA3D_DIR}
            ${DELTA3D_ROOT}
            $ENV{DELTA3D_DIR}
            $ENV{DELTA3D_ROOT}
        PATH_SUFFIXES
            /include/
    )
    if(${THIS_DELTA3D_INCLUDE_DIR})
        mark_as_advanced(${THIS_DELTA3D_INCLUDE_DIR})
    endif()

ENDMACRO( FIND_DELTA3D_INCLUDE THIS_DELTA3D_INCLUDE_DIR THIS_DELTA3D_INCLUDE_FILE )


