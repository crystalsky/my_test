MACRO( FIND_DELTA3D_LIBRARY MYLIBRARY MYLIBRARYNAME )

FIND_LIBRARY(${MYLIBRARY}
    NAMES
        ${MYLIBRARYNAME}
    PATHS
        ${DELTA3D_DIR}
        ${DELTA3D_ROOT}
        $ENV{DELTA3D_DIR}
        $ENV{DELTA3D_ROOT}
    PATH_SUFFIXES
        /build/lib/
        /lib/
    
        /lib/debug/
        /lib/release/
     )
    if(${MYLIBRARY})
        mark_as_advanced(${MYLIBRARY})
    endif()
ENDMACRO(FIND_DELTA3D_LIBRARY LIBRARY LIBRARYNAME)

